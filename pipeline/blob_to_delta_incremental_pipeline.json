{
    "name": "blob_to_delta_incremental_pipeline",
    "properties": {
        "description": "Fast incremental transformation for FRED data updates. Target: <5 minutes per release.",
        "activities": [
            {
                "name": "Run_Incremental_Transform",
                "type": "SynapseNotebook",
                "dependsOn": [],
                "policy": {
                    "timeout": "0:30:00",
                    "retry": 2,
                    "retryIntervalInSeconds": 30
                },
                "typeProperties": {
                    "notebook": {
                        "referenceName": "blob_to_delta_incremental",
                        "type": "NotebookReference"
                    },
                    "parameters": {
                        "storage_account": {
                            "value": {
                                "value": "@pipeline().parameters.storage_account",
                                "type": "Expression"
                            },
                            "type": "string"
                        },
                        "container": {
                            "value": {
                                "value": "@pipeline().parameters.container",
                                "type": "Expression"
                            },
                            "type": "string"
                        },
                        "release_ids": {
                            "value": {
                                "value": "@pipeline().parameters.release_ids",
                                "type": "Expression"
                            },
                            "type": "string"
                        },
                        "mode": {
                            "value": {
                                "value": "@pipeline().parameters.mode",
                                "type": "Expression"
                            },
                            "type": "string"
                        }
                    },
                    "sparkPool": {
                        "referenceName": "fredsparkpool",
                        "type": "BigDataPoolReference"
                    },
                    "conf": {
                        "spark.dynamicAllocation.enabled": false
                    },
                    "driverSize": "Small",
                    "executorSize": "Small",
                    "numExecutors": 2
                }
            }
        ],
        "parameters": {
            "storage_account": {
                "type": "string",
                "defaultValue": "gzcstorageaccount"
            },
            "container": {
                "type": "string",
                "defaultValue": "macroeconomic-maintained-series"
            },
            "release_ids": {
                "type": "string",
                "defaultValue": "10"
            },
            "mode": {
                "type": "string",
                "defaultValue": "merge"
            }
        },
        "annotations": [
            "incremental",
            "fred",
            "production"
        ]
    }
}
